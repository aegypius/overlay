[Unit]
Description=Consul Agent
Wants=basic.target
After=basic.target network.target

[Service]
User=consul
Group=consul
ExecStart=/usr/bin/consul agent -server -data-dir=/var/lib/consul -config-dir=/etc/consul.d -ui-dir=/var/lib/consul/ui -bootstrap
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=on-failure
RestartSec=42s

[Install]
WantedBy=multi-user.target
